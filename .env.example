# API key used by services that require authentication.
API_KEY="CHANGE_ME"

# Public URL where the app is hosted.
APP_URL="http://localhost:3000"

# Backend foundations
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/orbitdine"
REDIS_URL="redis://localhost:6379"

# Firebase client configuration (used by Vite frontend)
VITE_FIREBASE_API_KEY="CHANGE_ME"
VITE_FIREBASE_AUTH_DOMAIN="your-project-id.firebaseapp.com"
VITE_FIREBASE_PROJECT_ID="your-project-id"
VITE_FIREBASE_STORAGE_BUCKET="your-project-id.firebasestorage.app"
VITE_FIREBASE_MESSAGING_SENDER_ID="CHANGE_ME"
VITE_FIREBASE_APP_ID="CHANGE_ME"

# Firebase Admin credentials for backend token verification.
# Use either FIREBASE_SERVICE_ACCOUNT_PATH or the three vars below.
FIREBASE_SERVICE_ACCOUNT_PATH="./serviceAccountKey.json"
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nCHANGE_ME\n-----END PRIVATE KEY-----\n"
